# Read the number of values to be entered
n = int(input("Enter how many values do you want to read: "))

# Initialize counters for positive and negative numbers
positive_count = 0
negative_count = 0

# Prompt the user to enter n values
print(f"Enter {n} values:")

# Initialize a counter for the while loop
count = 0

# Use a while loop to read n values
while count < n:
    value = int(input())
    if value >= 0:
        positive_count += 1
    else:
        negative_count += 1
    count += 1

# Output the result
print("The number of positive numbers:", positive_count)
print("The number of negative numbers:", negative_count)
